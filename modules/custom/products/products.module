<?php

/**
 * @file
 * Contains products.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function products_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the products module.
    case 'help.page.products':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The products.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function products_theme() {
  $theme = [];
  $theme['products'] = [
    'render element' => 'elements',
    'file' => 'products.page.inc',
    'template' => 'products',
  ];
  $theme['products_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'products.page.inc',
  ];
  return $theme;
}

/**
* Implements hook_theme_suggestions_HOOK().
*/
function products_theme_suggestions_products(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#products'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'products__' . $sanitized_view_mode;
  $suggestions[] = 'products__' . $entity->bundle();
  $suggestions[] = 'products__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'products__' . $entity->id();
  $suggestions[] = 'products__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
